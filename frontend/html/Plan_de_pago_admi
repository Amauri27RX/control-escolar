function addNewCharge() {
     // AQU IRA LA LLAMADA fetch() A TU SCRIPT PHP PARA AADIR UN NUEVO REGISTRO
     alert('Simulaci贸n: Nuevo cargo a帽adido. La tabla se refrescar谩.');
     document.getElementById('addChargeModal').style.display='none';
}
